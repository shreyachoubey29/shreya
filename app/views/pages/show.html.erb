<h2 align="center">Title: <%= @page.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">

<h4 class="center description"><strong>Description:</strong></h4>

<hr>

<%= simple_format(@page.description) %>

<div class="article-actions">

<%= link_to "Edit this article", edit_page_path(@page), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this article", page_path(@page), method: :delete,

data: { confirm: "Are you sure you want to delete the article?"},

class: "btn btn-xs btn-danger" %>

<%= link_to "View all articles", pages_path, class: "btn btn-xs btn-success" %>

</div>

</div>