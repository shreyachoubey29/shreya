<h2 align="center">Title: <%= @page.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
  <div class="row">
  <div class="well col-md-4 col-md-offset-4">
  <li><%= link_to gravatar_for(@page.user), user_path(@page.user) %></li>
  <li class="article-title">
  <%= link_to @page.user.username, user_path(@page.user) %>
  </li>
  <li><small><%= pluralize(@page.user.pages.count, "article") if @page.user.pages %></small></li>
  </div>
  </div>
  </ul>

<h4 class="center description"><strong>Description:</strong></h4>
<hr>
<% if logged_in? && (current_user == @page.user || current_user.admin?) %>
<%= simple_format(@page.description) %>
<% if @article.categories.any? %>
<p>Categories: <%= render @article.categories %></p>
<% end %>
<div class="article-actions">
<%= link_to "Edit this article", edit_page_path(@page), class: "btn btn-xs btn-primary" %>
<%= link_to "Delete this article", page_path(@page), method: :delete,
data: { confirm: "Are you sure you want to delete the article?"},
class: "btn btn-xs btn-danger" %>
<%= link_to "View all articles", pages_path, class: "btn btn-xs btn-success" %>
</div>
</div>
<% end %>